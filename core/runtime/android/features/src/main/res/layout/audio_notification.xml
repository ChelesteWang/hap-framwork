<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_notification"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:gravity="center_vertical">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:layout_marginStart="13dp"
            android:layout_marginTop="11.33dp"
            android:layout_marginBottom="12dp" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/textLinearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:gravity="center_vertical|end"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/previous"
            android:layout_width="31.66dp"
            android:layout_height="32dp"
            android:layout_marginEnd="22.33dp"
            android:padding="8dp"
            android:src="@drawable/ic_media_notification_previous" />

        <ImageView
            android:id="@+id/play"
            android:layout_width="32.66dp"
            android:layout_height="33.66dp"
            android:layout_marginEnd="22.66dp"
            android:padding="8dp"
            android:src="@drawable/ic_media_notification_play" />

        <ImageView
            android:id="@+id/next"
            android:layout_width="31.66dp"
            android:layout_height="32dp"
            android:layout_marginEnd="5dp"
            android:padding="8dp"
            android:src="@drawable/ic_media_notification_next" />

    </LinearLayout>
</LinearLayout>
