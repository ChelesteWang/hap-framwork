<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <solid android:color="@color/video_pg_background_color" />
            <size android:height="@dimen/video_dialog_progress_height" />
            <corners android:radius="@dimen/video_dialog_progress_radius" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <solid android:color="@color/video_secondary_color" />
                <size android:height="@dimen/video_dialog_progress_height" />
                <corners android:radius="@dimen/video_dialog_progress_radius" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <solid android:color="@color/video_primary_color" />
                <size android:height="@dimen/video_dialog_progress_height" />
                <corners android:radius="@dimen/video_dialog_progress_radius" />
            </shape>
        </clip>
    </item>
</layer-list>
